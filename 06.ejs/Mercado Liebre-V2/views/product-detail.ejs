<!DOCTYPE html>
<html lang="en">

<head>
    <%- include('partials/head') %>
    <link rel="stylesheet" href="/stylesheets/detail-style.css">
</head>

<body>
    <!-- Header -->
    <%- include('partials/header') %>
    <!-- /Header -->

    <!-- Detail -->

    <div class="container-fluid big-container">
       
        <div class="container product-wrapper">
            <div class="row m-0">
                <h2 class="col-12 name">
                    Detalle del producto: <%= product.name %>
                </h2>
           
                <div class="col-12 row m-0 product-container">
           
                    <div class="col- 12 col-lg-8 mt-2 product-box-image">
                        <img src="/images/products/<%= product.image %>" alt="<%= product.name %>">
                        <p><%= product.description %> </p>
                    </div>
           
                    <div class="col-12 col-lg-4 product-details">
                
                    <div class="product-details-info">
                        <h1><%= product.name %> </h1>
           
                        <% if (product.discount > 0) { %>
           
                        <div class="col-12 precio-descuento">
                            <span class="tachado">$<%= toThousand(product.price)%></span>
                            <span class="discount"> / <%= product.discount %>% OFF</span>
                        </div>
           
                        <h3 class="price">$<%= toThousand(product.price - (product.price / 100 * product.discount)) %></h3>
           
                        <% } else { %>
           
                        <h3 class="price"><%= toThousand(product.price) %></h3>
           
                        <% } %>
           
                       <div>
                            <div class="pago">
                                <i class="fas fa-credit-card col-1"></i>
                                <p class="col-10">Pagá en 12 cuotas sin interés</p>
                            </div>
                                
                               <div class="pago">
                                    <i class="fas fa-store col-1"></i>
                                    <p class="col-10">Retiro gratis en los locales del vendedor</p>
                               </div>
                       </div>
           
                        <div class="col-12 m-0 boton">
                            <button class="btn btn-primary">COMPRAR AHORA</button>
                        </div>
           
                    </div>
                </article>
            </div>
       </div>
    </div>

    <!-- /Detail -->

    <!-- Footer -->
    <%- include('partials/footer') %>
    <!-- /Footer -->

    <script src="/javascripts/bootstrap.min.js"></script>
    <script src="/javascripts/jquery-3.5.1.min.js"></script>
    <script src="/javascripts/main.js"></script>
</body>


</html>