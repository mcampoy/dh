<!DOCTYPE html>
<html>

<head>
  <title>Registro</title>
  <link rel='stylesheet' href='/stylesheets/style.css' />
</head>

<body>
  <div class="container">
    <!-- <h2 class="title-register">Registrate ahora a LogIn para estar siempre conectado</h2> -->
    <div class="error">
      <% if (typeof errors != 'undefined') { %>
         <ul>
           <% for(let error of errors) { %>
             <li><%= error.msg %> </li>
           <% } %>
         </ul>
      
       <% } %>
    </div>

    <div class="wrapper-reg">
      <form class="register-form"  method="POST" action="/users/register" enctype="multipart/form-data">
        
        <img class="logoblanco" onclick="window.open('/')" src="/images/logo.png" alt="">
        
        <h3 class="reg">Crear una cuenta</h3>

        <!-- <label for="nombre">Nombre</label> <br> -->
          <input type="text" name="nombre" class="form-control " id="nombre" aria-describedby="nombre"
            placeholder="Nombre" required /> <br>

        <!-- <label for="apellido">Apellido</label> <br> -->
          <input type="text" name="apellido" class="form-control " id="apellido" aria-describedby="apellido"
            placeholder="Apellido" /> <br>

        <!-- <label for="email">Email</label> <br> -->
          <input type="email" name="email" class="form-control " id="email" aria-describedby="email"
            placeholder="Email" required /><br>

        <!-- <label for="password">Contraseña</label><br> -->
          <input type="password" name="password" class="form-control " id="password" aria-describedby="password"
            placeholder="Contraseña" required /></label><br>

        <!-- <label for for="password">Repetí tu contraseña</label> <br> -->
          <input type="password" name="validacion" class="form-control " id="validacion" aria-describedby="password"
            placeholder="Repetir contraseña" required /><br>

            <div class="avatar">
            <!-- <label>Imagen de perfil</label> <br> -->
            <input class="avatar" type="file" name="avatar"><br>
         </div>

        <div class="btns">
          <input class="btn" type="reset"></input>
          <input class="btn" type="submit" value="Registrarse"></input>
        </div>

        <div>
          <span>¿Ya sos usuario de LogIn? </span> <a class="ancor" href="/users/login">Iniciar sesión</a>
        </div>

      </form>
    </div>
  </div>
</body>

</html>